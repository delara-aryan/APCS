		//integer variables
		byte b = Byte.parseByte(JOptionPane.showInputDialog("Enter a byte."));
		short s = Short.parseShort(JOptionPane.showInputDialog("Enter a short."));
		int i = Integer.parseInt(JOptionPane.showInputDialog("Enter an integer."));
		long l = Long.parseLong(JOptionPane.showInputDialog("Enter a long."));

		//decimal variables
		float f = Float.parseFloat(JOptionPane.showInputDialog("Enter a float."));
		double d = Double.parseDouble(JOptionPane.showInputDialog("Enter a double."));

		//other integer types
		char c = JOptionPane.showInputDialog("Enter a char.").charAt(0);

		//other types
